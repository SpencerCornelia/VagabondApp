<%= render partial: "layouts/navbar" %>
<h1 id="headerName"> <%= @place.name %> </h1>
<script src="http://maps.googleapis.com/maps/api/js"></script>
<body>
	<div id="googleMap" style="width:500px;height:380px;"></div>
</body>

<script type="text/javascript">
	$(function(){
		var mapProp = {
	    center:new google.maps.LatLng(<%= @lat_long %>),
	    zoom:11,
	    mapTypeId:google.maps.MapTypeId.ROADMAP
	  };
	  	var map=new google.maps.Map(document.getElementById("googleMap"),mapProp);
	})
</script>	
<div id="formTitle">
	<%= form_for @post do |f| %>
		<br>
		<div>
			<%= f.text_field :title, placeholder: "Title goes here", size: "30" %>
		</div> 
		<div>
			<%= f.text_area :body, placeholder: "Body goes here", size: "30" %>
		</div>
		<div style="display: none">
			<%= f.text_field :place_id, value: "#{@place.id}" %>
		</div>
		<%= f.submit "Submit New Post" %>
	<% end %>
</div>
<div id="postListing">	
<ul>
	<%@place.posts.each do |post| %>
		<h4> <%= post.title %> </h3>
</div>
<div id="postListing2">			
			<p> <%= post.body %> <p>
			<!-- if the current user wrote this post -->
			<% if post.user_id == current_user.id %>
			<%= link_to "Edit", controller: "posts", action: "edit", id: post.id %> <br>
			<%= button_to('Delete', "/posts/#{post.id}", method: "delete") %>
			<%end %>
	<% end %>
</div>	
</ul>
</div>
